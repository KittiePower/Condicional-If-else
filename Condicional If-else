#include <iostream>
/*
Ejemplo para uso de condicional if-else
*/
using namespace std;

int main()
{
    int numero;

    
    cout<<" Escribe un numero"<<endl;
    cin>>numero;
    if(numero>0){
        cout<<"Es positivo"<<endl;
        
    }
    else
    {
        cout<<"Es negativo"<<endl;
    }
    return 0;
}


